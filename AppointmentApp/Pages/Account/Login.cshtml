@page
@using AppointmentApp.Insfrastructure.User
@model AppointmentApp.Pages.Account.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - RandevuNet</title>
    <link href="~/lib/sbadmin-template/css/styles.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <style>
        body {
            background: url('/lib/sbadmin-template/assets/img/Background.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url('/lib/sbadmin-template/assets/img/Background.jpg') no-repeat center center fixed;
            background-size: cover;
            backdrop-filter: blur(2px);
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.92);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
        }

        .login-form {
            padding: 2rem;
        }

        .login-header {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2c3e50;
        }

        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-card row g-0">
            <div class="col-12 login-form">
                <div class="text-center mb-4">
                    <div class="login-header fs-4 fw-bold">RandevuNet Giriş</div>
                    <small class="text-muted">Sağlıkta Dijital Kolaylık</small>
                </div>
                <form method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                        <label asp-for="Username">Kullanıcı Adı</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                        <label asp-for="Password">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>
                </form>
                <div class="text-danger text-center">
                    @if (!ModelState.IsValid)
                    {
                        <div>@Html.ValidationSummary()</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/sbadmin-template/js/scripts.js" asp-append-version="true"></script>
</body>

</html>
